<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="row">
  <div class="col-md-8">

    <h3>Change Email or Password</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: "Email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">
          <p>Awaiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
        <i>(leave blank unless changing)</i>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "sr-only" %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password confirmation" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "sr-only" %>
        <%= f.password_field :current_password, class: 'form-control', placeholder: "Password" %>
        <i>(to confirm changes)</i>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>

    <% end %>

    <h3>Edit Personal Information</h3>
    <%= form_for(current_user) do |f| %>

      <div class="form-group">
        <%= f.label :name, class: "sr-only" %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>

    <% end %>

    <h3>Upgrade My Account</h3>
    <div class="form-group">
      <% if current_user.premium? %>
        <p><button type="button" class="btn btn-lg btn-primary" disabled="disabled">Upgrade My Account</button></p>
      <% else %>
        <p><%= link_to "Upgrade My Account", new_charge_path, class: 'btn btn-primary' %></p>
      <% end %>
    </div>

    <h3>Cancel My Account</h3>
    <div class="form-group">
      <p><%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>
    </div>

  </div>
</div>
